apiVersion: types.kubefed.k8s.io/v1beta1
kind: FederatedPersistentVolumeClaim
metadata:
  name: mongo
  labels:
    name: mongo
spec:
  template:
    spec:
      accessModes:
        - ReadWriteOnce
      resources:
        requests:
          storage: 10Gi
  placement:
    clusters:
    {% for cluster in var_cluster_list -%}
     - name: {{ cluster }}
    {% endfor %}
